    "rx": "^4.0.7",
    "string-search": "^1.2.0",
    "tether": "^1.2.0",
    "tether-drop": "^1.4.2",
    "then-request": "^2.1.1",
    "underscore.string": "^3.3.4",
    "clear": "0.0.1",
    "handlebars": "^4.0.5",
    "koa": "^1.2.0",
    "koa-better-body": "^1.0.17",
    "koa-routing": "^1.3.1",
    "koa-static": "^2.0.0",
    "lokijs": "^1.3.15",
    "moment": "^2.12.0",
